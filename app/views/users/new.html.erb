<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
  <legend>Arrendadora</legend>
  <%= f.input :lessor %>
  <%= f.input :lessor_address %>
  <%= f.input :lessor_city %>
  <%= f.input :lessor_cep %>
  <%= f.input :lessor_district %>
  <%= f.input :lessor_state %>
  <%= f.input :lessor_cnpj %>
</fieldset>
<div class="form-actions">
  <%= f.button :submit, t("helpers.links.user.create"), :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
  users_path, :class => 'btn' %>
</div>
<% end %>
